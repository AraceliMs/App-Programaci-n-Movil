<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".num_raynols"
    android:background="@drawable/pastel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"

        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="312dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="49dp"
            android:backgroundTint="#DDC1C1"
            android:fontFamily="@font/armata"
            android:rotationX="0"

            android:text="Numero de Reynols"
            android:textAlignment="center"
            android:textColor="#9F8E8E"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView39"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="520dp"
            android:fontFamily="@font/actor"
            android:justificationMode="inter_word"
            android:text="El numero de Reynolds es la relación de fuerzas de inercia a fuerzas viscosas y es un parametro  conveniente para predecir si un flujo será laminar o turbulento. Se puede interpretar que cuando las fuerzas viscosas son dominantes (flujo lento, baja Re) son suficientes para mantener todas las particulas de fluido en linea, entonces el flujo es laminar. "
            android:textColor="#000000"
            android:textSize="14dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="370dp"
            android:layout_height="196dp"
            android:layout_below="@+id/textView40"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="190dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/numero" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="146dp"
            android:layout_marginBottom="114dp"
            android:background="@drawable/botton_trans"
            android:backgroundTint="#A9A39E9E"
            android:fontFamily="@font/autour_one"
            android:text="SIGUIENTE"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="@font/actor"
            android:justificationMode="inter_word"
            android:text="Incluso Re muy bajo indica movimienyo de arrastre viscoso, donde los efectos de la inercia son insignificantes. Cuando las fuerzas de inercia dominan sobre las fuerxas viscosas (cuando el fluido fluye mas rapido y Re es mas grande), el flujo es turbulento."
            android:textColor="#000000" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>